@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
	<MudAppBar>
		<MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
		<MudImage Src="mybookreviewlogo.png" Alt="Brand Logo" Style="height:40px; margin-right:10px;" />
		<MudLink Href="/" Color="Color.Inherit"> My Book Rev </MudLink>
		<MudSpacer />
		<MudLink Href="/about" Color="Color.Inherit">About</MudLink>
	</MudAppBar>
	<MudDrawer @bind-Open="@_drawerOpen">
		<NavMenu />
	</MudDrawer>
	<MudMainContent Style="margin-top:8px;margin-bottom:64px;">
		<MudContainer MaxWidth="MaxWidth.Large">
			@Body
		</MudContainer>
	</MudMainContent>
	<MudAppBar Bottom="true" Fixed="true" Class="align-center">
		<MudText Typo="Typo.body1" Align="Align.Center">© copyright educational purposes: Mushafau Oke, Section OE01, Instructor: Tina Caron</MudText>
	</MudAppBar>
</MudLayout>

@code {
	bool _drawerOpen = true;

	void DrawerToggle()
	{
		_drawerOpen = !_drawerOpen;
	}
}